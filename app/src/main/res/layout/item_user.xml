<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/clickable_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        tools:src="@drawable/ic_dicoding"
        app:finalHeight="@dimen/_32sdp"
        app:finalYPosition="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startHeight="2dp"
        app:startToolbarPosition="2dp"
        app:startXPosition="2dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_condensed_bold"
        android:maxLines="1"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:layout_constraintVertical_bias="0.089999974"
        tools:text="Name Lorem Ipsum is simply dummy text of the printing" />

    <TextView
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_48sdp"
        android:background="@drawable/shape_info"
        android:clickable="true"
        android:elevation="@dimen/_1sdp"
        android:drawablePadding="@dimen/_6sdp"
        android:ellipsize="end"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:textSize="@dimen/_10ssp"
        app:drawableEndCompat="@drawable/ic_baseline_open_in_new_24"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="https://github.com/sidiqpermanahttps://github.com/sidiqpermana" />

</androidx.constraintlayout.widget.ConstraintLayout>